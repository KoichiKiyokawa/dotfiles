bind main R !git rebase -i %(commit) --autostash
bind diff R !git rebase -i %(commit) --autostash
bind status D ?rm %(file)

# color setting
# change color to make it easy to see boundaries by diff-view
color diff-header default magenta
color diff-chunk black white

# P: push to remote
bind generic P ?git push -u %(remote) %(repo:head)

# auto refresh
set refresh-mode = periodic
set refresh-interval = 3

# show diff in units of words
set diff-highlight = true

